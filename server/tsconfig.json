{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@auth/*": ["src/auth/*"],
      "@mail/*": ["src/mail/*"],
      "@players/*": ["src/players/*"],
      "@portfolios/*": ["src/portfolios/*"],
      "@test/*": ["src/test/*"],
      "@transactions/*": ["src/transactions/*"],
      "@users/*": ["src/users/*"],
      "@util/*": ["src/util/*"]
    }
  }
}
